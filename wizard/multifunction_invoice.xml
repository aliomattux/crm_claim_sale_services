<openerp>
    <data>

         <act_window name="Create Refund"
            res_model="crm.claim.multifunction.invoice"
            src_model="crm.claim"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            multi="True"
            id="act_create_claim_refund"/>

         <act_window name="Create Invoice"
            res_model="crm.claim.multifunction.invoice"
            src_model="crm.claim"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            multi="True"
            id="act_create_claim_invoice"/>


        <record id="claim_multi_function_invoice_form" model="ir.ui.view">
            <field name="name">Claim Create Invoice Form</field>
            <field name="model">crm.claim.multifunction.invoice</field>
            <field name="arch" type="xml">
		<form>
		    <field name="move_lines" widget="one2many_list" >
		        <tree editable="top">
			    <field name="product" />
			    <field name="name" />
			    <field name="order_qty" />
		        </tree>
		    </field>
		    <group>
		        <button string="Create Refund" type="object" name="make_transfer" />
		        <button string="Create Invoice" type="object" name="make_transfer" />
		    </group>
		</form>
	    </field>
	</record>

    </data>
</openerp>
